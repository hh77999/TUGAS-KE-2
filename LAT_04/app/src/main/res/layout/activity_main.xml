<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="top">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#008098"
        android:text="Grid Layout"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_below="@id/main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="3"
        android:padding="8dp">

        <Button
            android:id="@+id/button_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            android:text="A"/>

        <Button
            android:id="@+id/button_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            android:text="B" />

        <Button
            android:id="@+id/button_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            android:text="C"/>

        <Button
            android:id="@+id/button_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            android:text="D"/>

        <Button
            android:id="@+id/button_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            android:text="E"/>

        <Button
            android:id="@+id/button_06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            android:text="F" />

        <Button
            android:id="@+id/button_07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            android:text="G"/>

        <Button
            android:id="@+id/button_08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            android:text="H"/>

        <Button
            android:id="@+id/button_09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            android:text="I"/>

        <Button
            android:id="@+id/button_010"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            android:text="J" />

        <Button
            android:id="@+id/button_011"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            android:text="K"/>

        <Button
            android:id="@+id/button_012"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#FFFFFF"
            android:text="L"/>

    </GridLayout>

</RelativeLayout>
